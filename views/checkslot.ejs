  <div class="container">
    <h1>Check Slots</h1>
    <form id="appointmentForm">
      <div class="form-row">
        <div>
          <label for="date">Date:</label>
          <input type="date" id="date" name="date" required>
        </div>
        <div>
          <label for="phone">Phone Number:</label>
          <input type="tel" id="phone" name="phone" required>
        </div>
      </div>

      <label for="city">City:</label>
      <select id="city" name="city" required>
        <option value="Maidenhead">Maidenhead</option>
        <option value="Windsor">Windsor</option>
        <option value="Bracknell">Bracknell</option>
        <option value="High Wycombe">High Wycombe</option>
        <option value="Slough">Slough</option>
        <option value="Marlow">Marlow</option>
        <option value="Reading">Reading</option>
        <option value="Burnham">Burnham</option>
        <option value="Taplow">Taplow</option>
        <option value="Langley">Langley</option>
      </select>

      <div class="slots">
        <div class="slot">
          <input type="radio" id="slot1" name="slot" value="slot1" required>
          <label for="slot1">Slot 1</label>
        </div>
        <div class="slot">
          <input type="radio" id="slot2" name="slot" value="slot2" required>
          <label for="slot2">Slot 2</label>
        </div>
        <div class="slot">
          <input type="radio" id="slot3" name="slot" value="slot3" required>
          <label for="slot3">Slot 3</label>
        </div>
        <div class="slot" id="slot4-container" style="display: none;">
          <input type="radio" id="slot4" name="slot" value="slot4">
          <label for="slot4">Slot 4</label>
        </div>
        <div class="slot" id="slot5-container" style="display: none;">
          <input type="radio" id="slot5" name="slot" value="slot5">
          <label for="slot5">Slot 5</label>
        </div>
        <div class="slot" id="slot6-container" style="display: none;">
          <input type="radio" id="slot6" name="slot" value="slot6">
          <label for="slot6">Slot 6</label>
        </div>
      </div>

      <button type="submit" class="btn">Check Availability</button>
    </form>
  </div>
  <br><br>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/js/intlTelInput.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const phoneInputField = document.querySelector("#phone");
      const iti = window.intlTelInput(phoneInputField, {
        initialCountry: "auto", // or your default country code
        utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/js/utils.js"
      });

      document.getElementById('date').addEventListener('change', function() {
        const date = new Date(this.value);
        const currentDate = new Date();
        if (date < currentDate.setHours(0, 0, 0, 0)) {
          alert('Date cannot be in the past');
          this.value = '';
          return;
        }

        const day = date.getDay(); // Get the day of the week (0 for Sunday, 1 for Monday, etc.)

        if (day === 0) { // Sunday
          document.getElementById('slot4-container').style.display = 'block';
          document.getElementById('slot5-container').style.display = 'block';
          document.getElementById('slot6-container').style.display = 'block';
        } else {
          document.getElementById('slot4-container').style.display = 'none';
          document.getElementById('slot5-container').style.display = 'none';
          document.getElementById('slot6-container').style.display = 'none';
        }
      });

      document.getElementById('appointmentForm').addEventListener('submit', function(event) {
        event.preventDefault();

        const slotElement = document.querySelector('input[name="slot"]:checked');
        if (!slotElement) {
          alert('Please select a slot.');
          return;
        }

        const slot = slotElement.value;
        const date = document.getElementById('date').value;
        const phone = iti.getNumber();
        const city = document.getElementById('city').value;

        fetch('/checkslot', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              date,
              slot,
              phone,
              city
            })
          })
          .then(response => response.json())
          .then(data => {
            if (data.redirect) {
              window.location.href = data.redirect;
            } else if (data.error) {
              alert(data.error);
            } else if (data.errors) {
              alert(data.errors.map(err => err.msg).join('\n'));
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
      });
    });
  </script>
