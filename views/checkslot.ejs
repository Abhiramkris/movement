<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check Slots</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/css/intlTelInput.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin: 10px 0 5px;
        }
        input[type="date"],
        input[type="tel"],
        input[type="radio"],
        select,
        button {
            display: block;
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
            font-size: 16px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Check Slots</h1>
        <form id="appointmentForm">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required><br>

            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" name="phone" required><br>

            <label for="city">City:</label>
            <select id="city" name="city" required>
                <option value="Maidenhead">Maidenhead</option>
                <option value="Windsor">Windsor</option>
                <option value="Bracknell">Bracknell</option>
                <option value="High Wycombe">High Wycombe</option>
                <option value="Slough">Slough</option>
                <option value="Marlow">Marlow</option>
                <option value="Reading">Reading</option>
                <option value="Burnham">Burnham</option>
                <option value="Taplow">Taplow</option>
                <option value="Langley">Langley</option>
            </select><br>

            <div id="slot1-container">
                <input type="radio" id="slot1" name="slot" value="slot1" required> Slot 1<br>
            </div>
            <div id="slot2-container">
                <input type="radio" id="slot2" name="slot" value="slot2" required> Slot 2<br>
            </div>
            <div id="slot3-container">
                <input type="radio" id="slot3" name="slot" value="slot3" required> Slot 3<br>
            </div>
            <div id="slot4-container" style="display: none;">
                <input type="radio" id="slot4" name="slot" value="slot4"> Slot 4<br>
            </div>
            <div id="slot5-container" style="display: none;">
                <input type="radio" id="slot5" name="slot" value="slot5"> Slot 5<br>
            </div>
            <div id="slot6-container" style="display: none;">
                <input type="radio" id="slot6" name="slot" value="slot6"> Slot 6<br>
            </div>
            <button type="submit">Check Availability</button> <br>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/js/intlTelInput.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const phoneInputField = document.querySelector("#phone");
            const iti = window.intlTelInput(phoneInputField, {
                initialCountry: "ca",
                utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.12/js/utils.js"
            });

            document.getElementById('date').addEventListener('change', function () {
                const date = new Date(this.value);
                const currentDate = new Date();
                if (date < currentDate.setHours(0, 0, 0, 0)) {
                    alert('Date cannot be in the past');
                    this.value = '';
                    return;
                }

                const day = date.getDay(); // Get the day of the week (0 for Sunday, 1 for Monday, etc.)

                if (day === 0) { // Sunday
                    document.getElementById('slot4-container').style.display = 'block';
                    document.getElementById('slot5-container').style.display = 'block';
                    document.getElementById('slot6-container').style.display = 'block';
                } else {
                    document.getElementById('slot4-container').style.display = 'none';
                    document.getElementById('slot5-container').style.display = 'none';
                    document.getElementById('slot6-container').style.display = 'none';
                }
            });

            document.getElementById('appointmentForm').addEventListener('submit', function (event) {
                event.preventDefault();

                const slotElement = document.querySelector('input[name="slot"]:checked');
                if (!slotElement) {
                    alert('Please select a slot.');
                    return;
                }

                const slot = slotElement.value;
                const date = document.getElementById('date').value;
                const phone = iti.getNumber();
                const city = document.getElementById('city').value;

                fetch('/checkslot', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ date, slot, phone, city })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.redirect) {
                        window.location.href = data.redirect;
                    } else if (data.error) {
                        alert(data.error);
                    } else if (data.errors) {
                        alert(data.errors.map(err => err.msg).join('\n'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            });
        });
    </script>
</body>

</html>
