    /* Variables */
    :root {
      --main-font: 'Poppins', sans-serif;
      --primary-color: #1a73e8;
      --primary-gradient: linear-gradient(135deg, #1a73e8 0%, #4285f4 100%);
      --light-gray: #f8f8f8;
      --main-font-color: #5f6368;
      --main-font-weight: 300;
    }

    /* Basic */
    body {
