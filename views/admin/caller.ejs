<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Call Requests</title>
</head>
<body>
  <h1>Admin - Call Requests</h1>
  <table>
    <tr>
      <th>Phone Number</th>
      <th>Requested Number</th>
      <th>Actions</th>
    </tr>
    <% callRequests.forEach(request => { %>
      <tr>
        <td><%= request.phone %></td>
        <td><%= request.requested_number %></td>
        <td>
          <form action="/admin/delete/<%= request.id %>" method="post">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
