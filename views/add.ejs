<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Notification</title>
    <style>
        @keyframes popperFadeInOut {
            0% {
                opacity: 0;
                transform: scale(0.8);
            }
            20% {
                opacity: 1;
                transform: scale(1);
            }
            80% {
                opacity: 1;
                transform: scale(1);
            }
            100% {
                opacity: 0;
                transform: scale(0.8);
            }
        }

        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }

        .popper {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            color: black;
            padding: 20px 40px;
            border-radius: 8px;
            font-size: 18px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            display: none;
            text-align: center;
            animation: popperFadeInOut 4s ease-in-out forwards;
            z-index: 1000;
        }

        .popper img {
            width: 50px;
            height: 50px;
            display: block;
            margin: 0 auto 10px;
        }
    </style>
</head>
<body>
    <h1>Appointment added successfully!</h1>
    
    <div class="popper" id="popper">
        <img src="/images/ok.gif" alt="Success">
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (!('Notification' in window)) {
                console.error('This browser does not support desktop notification.');
                return;
            }

            Notification.requestPermission().then(permission => {
                if (permission === 'granted') {
                    console.log('Notification permission granted.');
                } else {
                    console.error('Permission denied for notification.');
                }
            });

            // Example: Listen for notifications triggered by server
            const serverUrl = 'http://localhost:3000/send-notification';

            fetch(serverUrl)
                .then(response => response.json())
                .then(data => {
                    if (data.title && data.body) {
                        new Notification(data.title, { body: data.body });
                        showSuccessAnimation();
                    }
                })
                .catch(error => {
                    console.error('Error fetching notification:', error);
                });
        });

        function showSuccessAnimation() {
            const popper = document.getElementById('popper');
            popper.style.display = 'block';

            setTimeout(() => {
                window.location.href = '/added';
            }, 4000); // Redirect after 4 seconds
        }
    </script>
</body>
</html>
