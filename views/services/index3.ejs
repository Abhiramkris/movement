<style>
  /* styles.css */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: Arial, sans-serif;
  }

  .content-wrapper {
    margin: 0 auto; /* Center the content horizontally */
    max-width: 1200px; /* Adjust as needed */
    padding: 20px;
  }

  .container {
    max-width: 100%; /* Full width within the content wrapper */
  }

  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    max-width: 100%;
  }

  .box {
    display: flex;
    flex-direction: column;
    width: 100%;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    /* Updated box shadow with more vibrancy */
    margin-bottom: 20px;
  }

  .left {
    order: 2; /* Text will be on top in mobile view */
    padding: 20px;
    flex: 1;
  }

  .right {
    order: 1; /* Image will be at the bottom in mobile view */
    flex: 1;
    position: relative;
    padding-bottom: 100%; /* Aspect ratio of 1:1 to make it square */
  }

  .right img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .left h2 {
    margin-bottom: 10px;
    border-bottom: 2px solid #007BFF;
    /* Updated to blue color */
    display: inline-block;
    text-transform: uppercase;
    /* Make heading text uppercase */
  }

  .left p {
    margin-bottom: 10px;
    /* Make description text uppercase */
  }

  .left button {
    padding: 5px 15px;
    background-color: #007BFF;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    text-transform: uppercase;
    /* Make button text uppercase */
  }

  .left button:hover {
    background-color: #0056b3;
  }

  @media (min-width: 768px) {
    .box {
      flex-direction: row;
      align-items: center;
    }

    .left {
      order: 1;
      flex: 2;
      padding: 20px;
    }

    .right {
      order: 2;
      flex: 1;
      padding-bottom: 0;
      width: 300px;
      height: 300px;
    }

    .right img {
      width: 100%;
      height: 100%;
    }
  }

  .herohero {
    margin-left: 100px;
    margin-top: 60px;
    width: 60%;
  }

  @media (max-width: 700px) {
    .herohero {
      margin-left: 20px;
      width: 90%;
    }
  }
</style>

