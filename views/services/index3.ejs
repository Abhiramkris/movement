  /* styles.css */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: Arial, sans-serif;
  }

  .container {
    padding: 20px;
  }

  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .box {
    display: flex;
    flex: 1 1 calc(50% - 20px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    /* Updated box shadow with more vibrancy */
    margin-bottom: 20px;
  }

  .left {
    flex: 1;
  }

  .left img {
    width: 100%;
    height: auto;
  }

  .right {
    flex: 1;
    padding: 20px;
  }

  .right h2 {
    margin-bottom: 10px;
    border-bottom: 2px solid #007BFF;
    /* Updated to blue color */
    display: inline-block;
    text-transform: uppercase;
    /* Make heading text uppercase */
  }

  .right p {
    margin-bottom: 20px;
    text-transform: uppercase;
    /* Make description text uppercase */
  }

  .right button {
    padding: 10px 20px;
    background-color: #007BFF;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    text-transform: uppercase;
    /* Make button text uppercase */
  }

  .right button:hover {
    background-color: #0056b3;
  }

  @media (max-width: 768px) {
    .box {
      flex: 1 1 100%;
      flex-direction: column;
    }
  }

  .herohero {
    margin-left: 180px;
    margin-top: 60px;
    width: 60%;
  }

  @media (max-width: 700px) {
    .herohero {
      margin-left: 20px;
      width: 90%;
